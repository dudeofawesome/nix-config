{
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "nix.enableLanguageServer": true,
  "nix.serverPath": "nil",
  "nix.formatterPath": ["nix", "fmt", "--", "--"],

  "[yaml]": {
    "editor.tabSize": 4
  },
  "cSpell.words": [
    "atuin",
    "awscli",
    "binpath",
    "cachix",
    "disko",
    "distro",
    "fontis",
    "krew",
    "mkalias",
    "moar",
    "mountpoint",
    "nixfmt",
    "nixos",
    "nixpkgs",
    "pkgs",
    "stdenv",
    "substituters",
    "upaymeifixit",
    "vfat",
    "wezterm"
  ]
}
